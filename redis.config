# Puerto en el que Redis estar치 escuchando
port 6379

# PID file
pidfile /var/run/redis_6379.pid

# Ruta para la base de datos de Redis 
dir /data

# Log level
loglevel notice

# Log file
logfile ""

# Permitir conexiones desde todas las direcciones IP
bind 0.0.0.0

# Timeout de la conexi칩n en segundos
timeout 0

# Modo standalone (el modo predeterminado)
protected-mode yes

# Desactivar el modo de supervisi칩n de Redis
daemonize no

# Configuraci칩n de RDB (persistence)
save 900 1
save 300 10
save 60 10000

# Endpoint de Redis 
# http://redis.io
